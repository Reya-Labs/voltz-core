    "@openzeppelin/contracts-ethereum-package": "^2.2.3",
    "@openzeppelin/contracts-upgradeable": "^4.4.2",
    "@openzeppelin/upgrades": "^2.8.0",
    "@uniswap/sdk-core": "^3.0.1",
    "hardhat-prettier": "0.0.1",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "jsbi": "^4.0.0",
    "mocha-chai-jest-snapshot": "^1.1.3",
    "prb-math": "^2.4.0",
    "tiny-invariant": "^1.1.0",
    "web3": "^1.6.1"
  },
  "scripts": {
    "postinstall": "env-prompt -d .env.example",
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "test": "npx hardhat test",
    "test:gas": "cross-env REPORT_GAS=true npx hardhat test",
    "test:gasreport": "cross-env REPORT_GAS_TO_FILE=gasCosts.txt REPORT_GAS=true npx hardhat test",
    "check": "npm run fix && npm run lint",
    "fix": "npm run format && npm run lint:fix",
    "lint": "npm run lint:sol && npm run lint:ts",
    "lint:fix": "npm run lint:sol:fix && npm run lint:ts:fix",
    "lint:sol": "npx solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "npx solhint 'contracts/**/*.sol' --fix",
    "lint:ts": "npx eslint '**/*.{json,js,ts}' --ext .js,.ts,.json --ignore-pattern 'node_modules'",
    "lint:ts:fix": "npx eslint '**/*.{json,js,ts}' --ext .js,.ts,.json --ignore-pattern 'node_modules' --fix",
    "format": "npm run format:sol && npm run format:ts",
    "format:sol": "npx prettier contracts/**/*.sol --write",
    "format:ts": "npx prettier '**/*.{json,js,ts,md}' --write",
    "format:sol:check": "npx prettier contracts/**/*.sol --check",
    "format:ts:check": "npx prettier '**/*.{json,js,ts,md}' --check",
    "format:check": "npm run format:sol:check && npm run format:ts:check",
    "prepare": "husky install",
    "deploy:kovan": "hardhat deploy --network kovan --tags Factory,RateOracles,Periphery,FCMs --export deployments/kovanDeployment.json",
    "deploy:localhost": "npx hardhat node --tags Factory,Mocks,RateOracles,Periphery,FCMs --export deployments/localhostDeployment.json --hostname 0.0.0.0",
    "createTestIrs:localhost": "npx hardhat createIrsInstance --network localhost --rate-oracle 'MockTokenRateOracle' --tick-spacing 3000",
    "generateEndToEndActivity:localhost": "npx hardhat test --network localhost test/end_to_end/general_setup/scenario0/scenario0.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Voltz-Protocol/voltz-core"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run check && hh size-contracts"
    }
  }
}
